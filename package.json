{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-pomodoro",
  "version": "1.0.0",
  "title": "Pomodoro Timer",
  "description": "A comprehensive Pomodoro timer extension for Raycast with persistent background operation, menu bar integration, and advanced productivity tracking",
  "icon": "icon.png",
  "author": "joaolucas-dev",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "homepage": "https://github.com/joaolucaswork/raycast-pomodoro",
  "repository": {
    "type": "git",
    "url": "https://github.com/joaolucaswork/raycast-pomodoro.git"
  },
  "bugs": {
    "url": "https://github.com/joaolucaswork/raycast-pomodoro/issues"
  },
  "keywords": [
    "pomodoro",
    "timer",
    "productivity",
    "focus",
    "time-management",
    "background-timer",
    "menu-bar",
    "persistent"
  ],
  "platforms": [
    "Windows"
  ],
  "commands": [
    {
      "name": "main-command",
      "title": "Focus Session",
      "description": "Start, stop, and manage your focus rounds",
      "mode": "view",
      "keywords": [
        "pomodoro",
        "pomodoro timer",
        "timer",
        "focus",
        "start",
        "work",
        "session"
      ]
    },
    {
      "name": "timer-history",
      "title": "Timer History",
      "description": "View your focus round history",
      "mode": "view",
      "keywords": [
        "history",
        "sessions",
        "past",
        "completed",
        "log"
      ]
    },
    {
      "name": "profile-command",
      "title": "Statistics & Profile",
      "description": "View your statistics, achievements, and configure settings",
      "mode": "view",
      "keywords": [
        "profile",
        "stats",
        "statistics",
        "achievements",
        "settings",
        "config"
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^1.19.1",
    "date-fns": "^4.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "18.18.4",
    "@types/react": "19.0.10",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
